{
  "name": "flux-capacitor-cli",
  "version": "0.1.0",
  "license": "MIT",
  "bin": {
    "flux": "./lib/cli.js"
  },
  "scripts": {
    "build": "babel src/ --out-dir lib/ --ignore __tests__ --source-maps",
    "test": "standard src/ && ava",
    "watch": "babel -w src/ --out-dir lib/ --ignore __tests__ --source-maps",
    "prepublish": "npm run build && npm test",
    "pretest": "npm run build"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "ignore": [
      "lib/"
    ],
    "presets": [
      "es2015-node4",
      "es2016",
      "es2017"
    ]
  },
  "engines": {
    "node": ">= 4.0"
  },
  "author": "Andy Wermke <andy@dev.next-step-software.com>",
  "repository": "flux-capacitor/cli",
  "bugs": "https://github.com/flux-capacitor/cli/issues",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-register": "^6.18.0",
    "babel-watch": "^2.0.3",
    "get-port": "^2.1.0",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "standard": "^8.4.0",
    "temp": "^0.8.3"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "deindent": "^0.1.0",
    "execa": "^0.5.0",
    "fs-extra": "^1.0.0",
    "json-update": "^3.0.0",
    "listr": "^0.7.0",
    "log-symbols": "^1.0.2",
    "meow": "^3.7.0",
    "mkdirp-promise": "^4.0.1",
    "mz": "^2.5.0",
    "path-exists": "^3.0.0",
    "uniq": "^1.0.1"
  }
}
